---
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" >
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Astro&Vue | {title}</title>
  </head>
  <body class="flex flex-col">
    <header class="z-50 flex justify-between items-center w-full py-4 px-8 bg-red-900 text-white fixed mt-0">
      <div class="flex-grow-1">
      <h1 class="text-2xl">Fabric AI Patterns</h1>
      </div>
      <nav class="flex-grow-0 gap-4 flex">
        <a href="/">Home</a>
        <a href="/patterns">Patterns</a>
      </nav>
    </header>
    <main class="mt-16 max-w-[1100px] m-auto p-4 flex flex-col justify-center items-center">
      <slot />
    </main>
    <footer class="min-h-[10rem]">
    </footer>
  </body>
</html>
